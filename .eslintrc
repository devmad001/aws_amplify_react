{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "import"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "never"
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          ".*"
        ]
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "space-in-parens": [
      "error",
      "always"
    ],
    "computed-property-spacing": [
      "error",
      "always"
    ],
    "template-curly-spacing": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-curly-spacing": [
      "error",
      "always"
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": "webpack.common.js"
    }
  }
}